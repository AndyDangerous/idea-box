<form role="form" action='/<%= idea.id %>' method='POST' enctype='multipart/form-data'>
  <% if idea.id %>
    <input type="hidden" id="_method" value="PUT" />
  <% end %>
  <div class="form-group">
    <label for="Title">Title</label>
    <input type='text' name='idea[title]' class="form-control" value="<%= idea.title %>" placeholder="title"/>
  </div>
  <div class="form-group">
    <label for="Description">Description</label>
    <textarea rows="3" type="textarea" class="form-control" name="idea[description]" value="<%= idea.description %>" placeholder="describe your idea"/></textarea>
  </div>
  <div class="form-group">
    <label for="picture">Picture</label>
    <input type="file" name="idea[image]">
  </div>
  <div class="form-group">
    <label for="tags">Tags</label>
    <input type='text' name='idea[tags]' class="form-control" value="<%= idea.tags %>" placeholder="e.g. cats"/>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
