<% ideas.each do |idea| %>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= img(idea.image) if idea.image %>
      <div class="caption">
        <h3><%= idea.title %></h3>
        <p><%= idea.description %></p><br>
            Tags:
              <% idea.tags.each do |tag| %>
              <a href="/tag/<%= tag %>"><%= tag %></a>
              <% end %>
        
        <ul class="list-group">
          <li class="list-group-item">
            <span class="badge"><%= idea.rank %></span>
            <form class="form-inline" role="form">
              <div class="form-group">
            <form action='/like/<%= idea.id %>' method="POST" class="form-inline">
              <button type='submit' class='btn btn-default'>like</button></form>
            </div>
            <div class="form-group">
            <form action='/dislike/<%= idea.id %>' method="POST" class="form-inline">
              <button type='submit' class='btn btn-default'>dislike</button></form>
            </div>
            likes:
          </form>
          </li>
        </ul>
        
        <div class='btn-group' >
          <form action='/like/<%= idea.id %>' method="POST" display='inline'>
            <button type='submit' class='btn btn-default'>like</button></form>
            <a type='submit' class='btn btn-default' display='inline' href="/dislike/<%= idea.id %>">dislike</a>
            <a type='submit' class='btn btn-default' display='inline' href="/<%= idea.id %>/edit">edit</a>
          <form action="/delete/<%= idea.id %>" method="POST" display='inline'>
            <input type="hidden" name="_method" value="DELETE">
            <button  type='submit' class='btn btn-default'>delete</button></form>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>