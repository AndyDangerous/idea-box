<html>
  <head>
    <title>IdeaBox</title>
  </head>
  <body>
    <h1>IdeaBox</h1>
    <form action='/' method='POST'>
      <p>
        Your Idea:
      </p>
      <input type='text' name='idea_title' placeholder='Idea'/><br/>
      <textarea name='idea_description' placeholder='Idea description...'></textarea><br/>
      <input type='submit'/>
    </form>
    <h3>
      Existing Ideas
    </h3>
    <ul>
      <% ideas.each do |idea| %>
        <li>
          <%= idea.title %><br>
          <%= idea.description %><br>
        </li>
        <% end %>
    </ul>
  </body>
</html>
